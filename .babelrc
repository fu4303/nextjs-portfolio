{
  "env": {
    "development": {
      "presets": [
        "next/babel"
      ],
      "plugins": [
        [
          "prismjs",
          {
            "languages": [
              "javascript",
              "css",
              "html",
              "react"
            ],
            "plugins": [
              "line-numbers",
              "show-language",
              // Disabling this will fox the error but break the marktup
              "keep-markup"
            ],
            "theme": "tomorrow",
            "css": true
          }
        ],
        [
          "styled-components",
          {
            "ssr": true,
            "displayName": true
          }
        ]
      ]
    },
  }
}